	Home();
	MoveTo(center.x-10,center.y-10);
	LineTo(center.x-10,center.y+10);
	LineTo(center.x+10,center.y+10);
	LineTo(center.x+10,center.y-10);
	LineTo(center.x-10,center.y-10);	

	var r=100;
	for (var a=0;a<=4*2*Math.PI;a+=Math.PI/20) {
	   var x=Math.cos(a)*r+center.x;
	   var y=Math.sin(a)*r+center.y;   
